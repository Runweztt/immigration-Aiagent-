# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_MODEL_NAME="claude-sonnet-4-20250514"

# OpenAI Configuration (optional fallback)
# OPENAI_API_KEY="your-api-key-here"
# OPENAI_MODEL_NAME="gpt-3.5-turbo"

# Ollama Configuration (optional local fallback)
# OLLAMA_BASE_URL="http://localhost:11434"
# OLLAMA_MODEL_NAME="llama3"

# LLM Provider Selection
LLM_PROVIDER="ANTHROPIC"  # or "OPENAI" or "OLLAMA" 

# Logging Configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="logs/crewai_llm.log"  # Path to log file, or empty for console only 

# UV Configuration
UV_PYTHON=3.11  # Recommended Python version for development 

# LangFlow Configuration
DO_NOT_TRACK=true
LANGFLOW_CONFIG_DIR=src/langflow_poc/workflows
LANGFLOW_SECRET_KEY=your_secret_key_here
LANGFLOW_STORE=true
LANGFLOW_STORE_ENVIRONMENT_VARIABLES=true
LANGFLOW_PROFILE_PICTURES_DIR=src/langflow_poc/profile_pictures
